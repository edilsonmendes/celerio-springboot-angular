	<security-constraint>
		<web-resource-collection>
			<web-resource-name>API REST Protegida</web-resource-name>
			<url-pattern>/api/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>pilotojee7-backend.acesso.api</role-name>
		</auth-constraint>
	</security-constraint>
	
	<login-config>
		<auth-method>KEYCLOAK</auth-method>
		<realm-name>${keycloak.realm}</realm-name>
	</login-config>

	<!-- specify all the roles defined for this web app -->
	<security-role>
		<role-name>pilotojee7-backend.acesso.api</role-name>
	</security-role>
	
